<?xml version="1.0" encoding="utf-8"?>

<!-- Используется по умолчанию для Планшетов в альбомном режиме -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.geekbrains.android1.lab6.weaponshop.MainActivity">

    <fragment
        class="ru.geekbrains.android1.lab6.weaponshop.CatalogFragment"
        android:id="@+id/fragmentCatalog"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"/>

    <FrameLayout
        android:id="@+id/containerFragmentCategory"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3" />

</LinearLayout>
